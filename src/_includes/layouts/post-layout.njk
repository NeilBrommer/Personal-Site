---
layout: layouts/layout.njk
---

<dl class="tags">
	<dt>
		<svg class="icon">
			<use href="/images/feather-sprite.svg#tag" />
		</svg>
		Tags
	</dt>
	{% for tag in tags %}
		{% if tag != "posts" %}
			<dd><a href="{{ "/posts/tags/" + (tag | slugify) | url }}">{{ tag }}</a></dd>
		{% endif %}
	{% endfor %}
</dl>

{{ content | safe }}
